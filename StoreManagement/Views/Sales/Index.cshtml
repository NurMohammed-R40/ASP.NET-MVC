@model IEnumerable<StoreManagement.Models.tblSale>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sales_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblCustomer.Customer_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblProduct.Product_Name)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sales_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblCustomer.Customer_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblProduct.Product_Name)
        </td>
    </tr>
}

</table>
